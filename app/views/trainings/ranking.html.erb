<main>
  <div class = "trainingranking-backimage">
    <div class = "users-title">
      <h2 class = "text-white font-weight-bold">ランキング</h2>
    </div>
  </div>

  <div class = "index-container">
    <% @rankings.each do |training| %>
      <div class = "index-box">
        <div class = "post">
          <p><%= attachment_image_tag training, :image, size:'250x200' %></p>
          <p class = "text-center">
            <%= attachment_image_tag @user, :profile_image, size:'33x33', fallback: "no_image.jpg", class: "rounded-circle" %>
            <%= training.user.user_name %>
          </p>
          <p class = "break text-center">【<%= link_to training.title, training_path(training.id) %>】：<%= training.genre %></p>
          <p class = "text-center"><%= training.time %>×<%= training.set %></p>
          <p class = "break text-center" ><%= training.description %></p>

          <!--ボーダー線-->
          <hr width="100%"></hr>

          <div class="content">

          <!--いいね機能-->
          <% if user_signed_in? %>
            <% if training.favorited_by?(current_user) %>
              <span>
                <%= link_to training_favorites_path(training), method: :delete do %>
                  <i class="fas fa-heart fa-lg favoon"></i><%= training.favorites.count %>
                <% end %>
              </span>
            <% else %>
              <span>
                <%= link_to training_favorites_path(training), method: :post do %>
                  <i class="far fa-heart fa-lg favooff"></i><%= training.favorites.count%>
                <% end %>
              </span>
            <% end %>
          <% else %>
          <% end %>

          <!--ブックマーク機能-->
          <% if user_signed_in? %>
            <% if training.bookmarked_by?(current_user) %>
                <span><%= link_to "", training_bookmarks_path(training), method: :delete, class: "fas fa-bookmark fa-lg" %></span>
              <% else %>
                <span><%= link_to "", training_bookmarks_path(training), method: :post, class: "far fa-bookmark fa-lg" %></></span>
            <% end %>
          <% else %>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
</div>
