<body>
  <div class = "container my-5">

    <div class="row">
      <div class="col offset-2">
        <h3 class="edit_title">投稿詳細</h3>
      </div>
    </div>

    <div class='row offset-1'>
      <div class="col-xs-offset-1 col-xs-8">
        <%= form_with model:@training, local:true do |f| %>

          <!--profile image 挿入-->
          <%= attachment_image_tag @training, :image %>
          <%= f.attachment_field :image, placeholder: "投稿画像" %>

          <table class = 'table inin'>
            <tr>
              <td><%= f.label :タイトル %></td>
              <td>
                <%= f.text_field :title, :size => "20*30", class: "border border-dark rounded" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :説明 %></td>
              <td>
                <%= f.text_field :description, :size => "50*60", class: "border border-dark rounded" %>
              </td>
            </tr>
          </table>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 offset-3">
        <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
  </div>
</body>