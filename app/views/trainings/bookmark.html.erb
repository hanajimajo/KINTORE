<table>
  <caption>ブックマーク一覧</caption>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.training.user.user_name %></td>
        <td>
          <%= link_to trainings_path(bookmark.training) do %>
            <%= bookmark.training.title %>
          <% end %>
        </td>
        <td><%= bookmark.training.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>