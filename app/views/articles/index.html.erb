
<div class = "articleindex-backimage">
  <div class = "articles-title">
    <h2 class = "text-white">ピックアップ</h2>
  </div>
</div>

<!--管理者投稿情報-->
<div class = "container">
    <table class = 'table border '>
      <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= attachment_image_tag article, :article_image, size: '400x200'%></td>
        <td>
          <p><%= article.title %></p>
          <p><%= article.description %></p>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
</div>

<!--ページング機能-->
<%= paginate @articles, class: "center-block" %>