<div class = "edit-backimage">
  <div class = "users-title">
    <h2 class = "text-white">アカウント編集</h2>
  </div>
</div>

<div class = "container">
  <div class = "low">
    <div class = "col-10 offset-1 mx-auto text-center text-white">
        <%= form_with model:@user, local:true do |f| %>
          <table class = 'table inin'>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
              <td><%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: " text-white" %></td>
            </tr>
            <tr>
              <td class="text-white">氏名</td>
              <td>
                <%= f.text_field :last_name, :size => "20*30", class: "border border-dark rounded text-dark" %>
                <%= f.text_field :first_name, :size => "20*30", class: "border border-dark rounded text-dark" %>
              </td>
            </tr>
            <tr>
              <td class="text-white">カナ</td>
              <td>
                <%= f.text_field :last_name_kana, :size => "20*30", class: "border border-dark rounded text-dark" %>
                <%= f.text_field :first_name_kana, :size => "20*30", class: "border border-dark rounded text-dark" %>
              </td>
            </tr>
            <tr>
              <td class="text-white">ユーザー名</td>
              <td><%= f.text_field :user_name, :size => "20*30", class: "border border-dark rounded text-dark",:size => "42" %></td>
            </tr>
            <tr>
              <td class="text-white">メールアドレス</td>
              <td><%= f.text_field :email, :size => "20*30", class: "border border-dark rounded text-dark",:size => "42" %></td>
            </tr>
          </table>
      </div>
    </div>

    <div class="row">
      <div class="col-10 offset-1 ">
        <%= f.submit '編集内容を保存', class: 'btn btn-link mx-auto d-block m-2 btn-outline-success text-white' %>
      </div>
        <% end %>
    </div>
  </div>
</body>
