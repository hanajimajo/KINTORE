<!DOCTYPE html>
<html>
  <head>
    <title>KINTORE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="row">
      <div class="col-12">
        <%= render'layouts/user_header' %>
      </div>
    </div>
  </header>

  <body>
    <div class="row">
      <div class="col-2 ">
        <%= render'layouts/user_sidebar' %>
      </div>
      <div class="col-8">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
